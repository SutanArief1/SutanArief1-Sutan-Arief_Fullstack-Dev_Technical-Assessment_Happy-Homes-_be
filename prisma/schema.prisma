generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id             String    @id @unique @default(cuid())
  start_date     DateTime?
  end_date       DateTime?
  start_hour     String?
  end_hour       String?
  duration       String?
  title_activity String?
  Project        Project?
}

model Project {
  id           String    @id @unique @default(cuid())
  project_name String?
  activity_id  Activity @relation(fields: [activityId], references: [id])
  activityId   String @unique
}

model User {
  id   String  @id @unique @default(cuid())
  name String?
  rate Int?
}