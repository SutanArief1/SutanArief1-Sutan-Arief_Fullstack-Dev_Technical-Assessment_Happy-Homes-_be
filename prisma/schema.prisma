generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id             String    @id @unique @default(cuid())
  start_date     DateTime?
  end_date       DateTime?
  start_hour     String?
  end_hour       String?
  duration       String?
  title_activity String?
  project_id     Project  @relation(fields: [projectId], references: [id])
  projectId      Int
}

model Project {
  id           Int     @id @unique @default(autoincrement())
  project_name String?
  Activity     Activity[]
}

model User {
  id   String  @id @unique @default(cuid())
  name String?
  rate Int?
}

